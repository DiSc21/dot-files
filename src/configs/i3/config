#==================================================================================================
# open menue for config files
#==================================================================================================
mode "modifyConfigFiles" {
        bindsym i mode "default"; exec killall i3-nagbar; workspace "0"; exec i3-sensible-terminal -e "vim ~/.config/i3/config"; \
                                                          workspace "0"; move workspace to output $center_monitor; mode "default";
        bindsym v mode "default"; exec killall i3-nagbar; workspace "0"; exec i3-sensible-terminal -e "vim ~/.vimrc"; \
                                                          workspace "0"; move workspace to output $center_monitor; mode "default";
        bindsym b mode "default"; exec killall i3-nagbar; workspace "0"; exec i3-sensible-terminal -e "vim ~/.bashrc"; \
                                                          workspace "0"; move workspace to output $center_monitor; mode "default";
        bindsym n mode "default"; exec killall i3-nagbar
}
bindsym $mod+Shift+w         exec "i3-nagbar -t warning -m 'Open config file for (i)3, (v)im, (b)ash or (n)othing'"; mode "modifyConfigFiles"
#==================================================================================================



#==================================================================================================
# exit i3 (logs you out of your X session)
#==================================================================================================
mode "endSession" {
        bindsym n mode "default"; exec killall i3-nagbar
        bindsym l mode "default"; exec killall i3-nagbar; exec pkill -u $USER
        bindsym r mode "default"; exec killall i3-nagbar; exec reboot
        bindsym s mode "default"; exec killall i3-nagbar; exec shutdown -h now
}

bindsym $mod+Shift+e         exec "i3-nagbar -t warning -m 'Do you really want to exit i3? Enter (n)ope, (s)hutdown, (r)estart or (l)log out.'"; mode "endSession"
#==================================================================================================



#==================================================================================================
# open menue for workspaces
#==================================================================================================
mode "createWorkspaces" {
        bindsym d mode "default"; exec killall i3-nagbar; workspace $ws1; move workspace to output $center_monitor, mode "default"; \
                                                          workspace $ws1; exec gnome-terminal --working-directory=/scratch/tmp/1_ITM_stuff/0_Diss_2019_03_11; \
                                                          workspace $ws2; move workspace to output $left_monitor; mode "default"; \
                                                          workspace $ws2; exec evince $diss; \
                                                          workspace $ws3; move workspace to output $right_monitor; mode "default";\
                                                          workspace $ws3; exec firefox https://www.deepl.com/translator;
                                                          #workspace $ws1; exec i3-sensible-terminal -e "bash /scratch/tmp/1_ITM_stuff/0_Diss_2019_03_11/"; \
        bindsym a mode "default"; exec killall i3-nagbar; workspace $ws1; move workspace to output $center_monitor, mode "default"; \
                                                          workspace $ws1; exec gnome-terminal --working-directory=$android3; \
                                                          workspace $ws3; move workspace to output $left_monitor; mode "default";\
                                                          workspace $ws3; exec firefox https://www.deepl.com/translator; \
                                                          workspace $ws2; move workspace to output $left_monitor; mode "default"; \
                                                          workspace $ws2; exec android-studio;
        bindsym n mode "default"; exec killall i3-nagbar
}
bindsym $mod+Shift+Tab       exec "i3-nagbar -t warning -m 'Create workspace for (d)iss, (a)ndroid or (n)othing'"; mode "createWorkspaces"
