mode "connectVpnWifi" {
        bindsym h mode "default"; exec killall i3-nagbar; exec i3-sensible-terminal -e "nmcli con up c4d38a55-f56f-4160-98b3-5a3cc243b9f1"
        bindsym g mode "default"; exec killall i3-nagbar; exec i3-sensible-terminal -e "nmcli con up b2b5e6d0-d925-4149-b97f-27c5113e114e"
        bindsym d mode "default"; exec killall i3-nagbar; exec i3-sensible-terminal -e "nmcli con up b3801e10-68f9-4f9b-8df4-dd64cd39fcaf --ask"
        bindsym t mode "default"; exec killall i3-nagbar; exec i3-sensible-terminal -e "nmcli con up 12c9f2a8-74b9-4773-bf43-a4d18fd16691 --ask"
        bindsym n mode "default"; exec killall i3-nagbar
}
mode "disconnectVpnWifi" {
        bindsym h mode "default"; exec killall i3-nagbar; exec "nmcli con down c4d38a55-f56f-4160-98b3-5a3cc243b9f1";
        bindsym g mode "default"; exec killall i3-nagbar; exec "nmcli con down b2b5e6d0-d925-4149-b97f-27c5113e114e";
        bindsym d mode "default"; exec killall i3-nagbar; exec "nmcli con down b3801e10-68f9-4f9b-8df4-dd64cd39fcaf";
        bindsym t mode "default"; exec killall i3-nagbar; exec "nmcli con down 12c9f2a8-74b9-4773-bf43-a4d18fd16691";
        bindsym n mode "default"; exec killall i3-nagbar
}

